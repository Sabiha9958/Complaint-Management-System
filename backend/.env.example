# ════════════════════════════════════════════════════════════════
# COMPLAINT MANAGEMENT SYSTEM - ENVIRONMENT TEMPLATE
# ════════════════════════════════════════════════════════════════

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
BASE_URL=http://localhost:5000

# Database Connection (Required)
MONGO_URI=mongodb://localhost:27017/complaint_management
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/complaint_management

# JWT Authentication (Required - Generate strong secrets)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_change_in_production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_minimum_32_characters_change_in_production
JWT_REFRESH_EXPIRE=30d

# Security Settings
BCRYPT_SALT_ROUNDS=12
COOKIE_MAX_AGE=2592000000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# CORS & Frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
FRONTEND_URL=http://localhost:5173

# File Upload Limits
MAX_FILE_SIZE=50mb
MAX_UPLOAD_FILES=5
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=ComplaintMS <noreply@complaintms.com>

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Application Settings
APP_NAME=Complaint Management System
DEFAULT_PAGE=1
DEFAULT_LIMIT=20
MAX_LIMIT=100

# Performance Tuning
REQUEST_TIMEOUT=30000
SHUTDOWN_TIMEOUT=10000
COMPRESSION_LEVEL=6
CACHE_MAX_AGE=7d

# Redis (Optional - for session management)
# REDIS_URL=redis://localhost:6379
